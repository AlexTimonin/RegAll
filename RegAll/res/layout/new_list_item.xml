<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/new_list_item_bg">

    <ImageView
            android:id="@+id/listItemImageView"
            android:layout_width="wrap_content"
            android:maxWidth="60dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/listItemTitleTextView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listItemImageView"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000"/>

    <TextView
            android:id="@+id/listItemAddressTextView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listItemImageView"
            android:layout_below="@id/listItemTitleTextView"
            android:layout_marginBottom="8dp"
            android:textSize="11sp"
            android:textColor="#555"/>

    <TextView
            android:id="@+id/listItemWorkTimeTextView"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listItemImageView"
            android:layout_below="@id/listItemAddressTextView"
            android:paddingBottom="8dp"
            android:textSize="11sp"
            android:textColor="#555"/>

</RelativeLayout>