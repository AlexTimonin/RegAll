<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/detailsImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:src="@drawable/new_reg_screen_logo"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/bg_white"/>

        <TextView
                android:id="@+id/detailsNavigateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/detailsApplyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/new_apply_button"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffdcdcdc">

        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/gradient_top"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Оценка пользователей:"/>

            <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:focusable="false"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/gradient_bottom"/>


    </LinearLayout>

    <ExpandableListView
            android:id="@+id/detailsExpandableListView"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:divider="#ffdcdcdc"
            android:groupIndicator="@null"/>

</LinearLayout>